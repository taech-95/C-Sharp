        <Button Content="Button" HorizontalAlignment="Left" Margin="38,235,0,0" VerticalAlignment="Top" Width="125"/>
        <ListBox x:Name ="listOfAssociatedAnimals" HorizontalAlignment="Left" Height="175" Margin="168,55,0,0" VerticalAlignment="Top" Width="125"/>
        <Label Content="Associated Animals" HorizontalAlignment="Left" Margin="168,29,0,0" VerticalAlignment="Top" Width="125"/>
        <ListBox x:Name ="listOfAnimals" HorizontalAlignment="Left" Height="275" Margin="300,55,0,0" VerticalAlignment="Top" Width="125"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="168,235,0,0" VerticalAlignment="Top" Width="125"/>

    </Grid>
</Window>
